
@{
    ViewBag.Title = "ajouterScenatiste";
    Layout = "~/Views/Shared/_LayoutManga.cshtml";
}



@using (Html.BeginForm("addScenariste", "Nouveau",
                        new { ReturnUrl = ViewBag.ReturnUrl },
